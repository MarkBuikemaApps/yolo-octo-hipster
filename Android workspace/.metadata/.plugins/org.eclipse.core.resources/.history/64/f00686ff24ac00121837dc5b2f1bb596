package com.markbuikema.juliana32.tools;

import java.util.ArrayList;

import android.content.Context;
import android.content.res.Configuration;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;
import android.widget.TextView;

import com.markbuikema.juliana32.R;
import com.markbuikema.juliana32.model.TableRow;

public class TableAdapter extends ArrayAdapter<TableRow> {

	public TableAdapter(Context context, ArrayList<TableRow> objects) {
		super(context, 0, objects);
		TableRow dummyRow = new TableRow("",0,0,0,0,0,0,0);
		insert(dummyRow, 0);

	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		if (convertView == null) convertView = LayoutInflater.from(getContext()).inflate(R.layout.listitem_tablerow, null);

		TableRow row = getItem(position);
		
		View background = convertView.findViewById(R.id.rowBackground);
		View divider = convertView.findViewById(R.id.rowDivider);

		TextView teamPosition = (TextView) convertView.findViewById(R.id.rowPosition);
		TextView teamName = (TextView) convertView.findViewById(R.id.rowTeam);
		TextView teamPlayed = (TextView) convertView.findViewById(R.id.rowPlayed);
		TextView teamPoints = (TextView) convertView.findViewById(R.id.rowPoints);

		if (getContext().getResources().getConfiguration().orientation == Configuration.ORIENTATION_LANDSCAPE) {
			TextView teamWon = (TextView) convertView.findViewById(R.id.rowWon);
			TextView teamDrawn = (TextView) convertView.findViewById(R.id.rowDrawn);
			TextView teamLost = (TextView) convertView.findViewById(R.id.rowLost);
			TextView teamScored = (TextView) convertView.findViewById(R.id.rowScored);
			TextView teamConceded = (TextView) convertView.findViewById(R.id.rowConceded);
			TextView teamMinusPoints = (TextView) convertView.findViewById(R.id.rowMinusPoints);
		}

		return convertView;
	}

}
