package com.markbuikema.juliana32.model;

import java.util.ArrayList;

public class Table {

	private ArrayList<TableRow> rows;

	public Table() {
		rows = new ArrayList<TableRow>();
	}
	
	public ArrayList<TableRow> getTable() {
		return rows;
	}

	public void addRow(String teamName, int played, int won, int drawn, int lost, int minusPoints, int scored, int conceded) {
		rows.add(new TableRow(teamName, played, won, drawn, lost, minusPoints, scored, conceded));
	}

	public class TableRow {
		public String teamName;
		public int played;
		public int won;
		public int drawn;
		public int lost;
		public int minusPoints;
		public int scored;
		public int conceded;

		public TableRow(String teamName, int played, int won, int drawn, int lost, int minusPoints, int scored, int conceded) {
			this.teamName = teamName;
			this.played = played;
			this.won = won;
			this.drawn = drawn;
			this.lost = lost;
			this.minusPoints = minusPoints;
			this.scored = scored;
			this.conceded = conceded;
		}
	}
}
