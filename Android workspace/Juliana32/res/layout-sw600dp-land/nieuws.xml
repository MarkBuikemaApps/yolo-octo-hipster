<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.markbuikema.juliana32.ui.ViewPagerCompatibleStaggeredGridView
        android:id="@+id/nieuwsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/white"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbVertical="@drawable/listitem_background"
        staggered:drawSelectorOnTop="true"
        staggered:numColumns="3" />

    <TextView
        android:id="@+id/noItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/huge_margin"
        android:gravity="center_horizontal"
        android:text="@string/no_item" />

</FrameLayout>